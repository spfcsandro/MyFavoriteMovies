<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context="br.com.ilhasoft.myfavoritemovies.ListarFilmeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/listar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:title="@string/app_name"
        android:elevation="@dimen/elevacao_toolbar"></android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/reclyclerViewDetalhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/listar_toolbar" />

</RelativeLayout>
